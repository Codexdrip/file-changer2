<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./includes/head'); %>
  </head>
  <body class="container">
    <header><%- include('./includes/header'); %></header>

    <main>
      <div class="jumbotron">
        <h1>This is great</h1>
        <p>Welcome to templating using EJS</p>
        <div>
          <form
            action="/uploads"
            enctype="multipart/form-data"
            method="post"
            id="folders"
          >
            <input
              type="text"
              class="form-control"
              placeholder="New Name"
              name="newName"
            />
            <div class="form-group">
              <input
                type="file"
                class="form-control-file"
                name="uploaded_files"
                webkitdirectory
                mozdirectory
              />
              <input type="submit" value="Go" class="btn btn-default" />
            </div>
          </form>
        </div>
      </div>
    </main>

    <footer><%- include('./includes/footer'); %></footer>
  </body>
  <script>
    submitForms = function () {
      document.getElementById("newName").submit();
      //document.getElementById("folders").submit();
    };
  </script>
</html>
